Code in C++

#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& mat) {
        int m = mat.size();
        int n = mat[0].size();

        vector<vector<int>> diag(m + n - 1);

        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                diag[i + j].push_back(mat[i][j]);
            }
        }

        vector<int> result;

  
        for (int d = 0; d < diag.size(); d++) {
            if (d % 2 == 0) {
                reverse(diag[d].begin(), diag[d].end());
            }
            result.insert(result.end(), diag[d].begin(), diag[d].end());
        }

        return result;
    }
};
